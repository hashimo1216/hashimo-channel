<%= link_to '戻る', posts_path, class: "btn btn-secondary mb-3 text-white" %>
<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">編集</h4>
        <%= render 'form', post: @post %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <%= form_with(model: [@post, @paragraph]) do |form| %>
      <%= form.submit %>
    <% end %>
  </div>
</div>


